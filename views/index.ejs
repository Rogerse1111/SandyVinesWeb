    <p>|</p>
    
  </main>

  <!-- Bottom Bar -->
  <footer class="bottom-bar">
    <div class="footer-container">
      <div class="footer-left">
        <img src="/images/logo.png" alt="SandyVines Logo" class="footer-logo">
      </div>
      <div class="footer-right">
        <div class="social-icons">
          <div class="social-group">
            <p>Follow Us!</p>
            <a href="https://www.instagram.com/sandyvinesranch/" target="_blank" aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
          </div>
          <div class="contact-group">
            <p>Contact Us!</p>
            <a href="mailto:sandyvinesranch14@gmail.com" target="_blank" aria-label="Email">
              <i class="fa-solid fa-envelope"></i>
            </a>
          </div>
        </div>
        <p class="footer-links">
          <a href="/terms">Terms of Use</a> |
          <a href="/privacy">Privacy Policy</a> |
          <a href="/trademarks">Trademarks</a> |
          <a href="/license">Licenses</a>
        </p>
      </div>
    </div>
    <div class="copyright">
      <p>&copy; <%= year %> Sandy Vines Ranch. All Rights Reserved.</p>
      <p>All content, images, and trademarks are the property of Sandy Vines Ranch and are protected under applicable copyright laws.</p>
    </div>
  </footer>   
  <script src="/scripts/carousel.js" defer></script>
  <script src="/scripts/nav.js" defer></script>  
</body>
</html>
