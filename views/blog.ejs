<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Blog | Sandy Vines</title>
  <link rel="stylesheet" href="/styles/index.css">
  <link rel="stylesheet" href="/styles/blog.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <!-- Top Bar -->
  <header class="top-bar">
    <div class="left">
      <img src="/images/wordLogo.png" alt="Sandy Vines Logo" class="top-bar-logo">
    </div>
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/blog">Blog</a>
      <a href="/gallery">Trail Cam Gallery</a>
    </nav>
  </header>

  <!-- Blog Posts -->
  <main>
    <h2>Sandy Vines Blog</h2>
    <p>Read the latest updates and stories from the Sandy Vines Ranch!</p>

    <% if (posts.length === 0) { %>
      <p>No blog posts yet.</p>
    <% } else { %>
      <section class="blog-container">
        <% posts.forEach(post => { %>
            <article class="blog-post">
                <div class="blog-post-flex">
                  <div class="blog-image-wrapper">
                    <% if (post.image_url) { %>
                      <img src="<%= post.image_url %>" alt="Post image" class="blog-image">
                    <% } %>
                  </div>
                  <div class="blog-text-content">
                    <h3><%= post.title %></h3>
                    <p class="blog-meta">Posted by <%= post.author || 'Anonymous' %> on <%= new Date(post.date_posted).toDateString() %></p>
                    <p><%= post.content.substring(0, 300) %></p>
                  </div>
                </div>
              </article>              
        <% }); %>
      </section>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="bottom-bar">
    <div class="footer-container">
      <div class="footer-left">
        <img src="/images/logo.png" alt="SandyVines Logo" class="footer-logo">
      </div>
      <div class="footer-right">
        <div class="social-icons">
          <div class="social-group">
            <p>Follow Us!</p>
            <a href="https://www.instagram.com/p/DIuE8mISGPd/" target="_blank" aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
          </div>
          <div class="contact-group">
            <p>Contact Us!</p>
            <a href="mailto:sandyvinesranch14@gmail.com" target="_blank" aria-label="Email">
              <i class="fa-solid fa-envelope"></i>
            </a>
          </div>
        </div>
        <p class="footer-links">
          <a href="/terms">Terms of Use</a> |
          <a href="/privacy">Privacy Policy</a> |
          <a href="/trademarks">Trademarks</a> |
          <a href="/license">License's</a>
        </p>
      </div>
    </div>
    <div class="copyright">
      <p>&copy; <%= year %> Sandy Vines Ranch. All Rights Reserved.</p>
      <p>All content, images, and trademarks are the property of Sandy Vines Ranch and are protected under applicable copyright laws.</p>
    </div>
  </footer>
</body>
</html>
